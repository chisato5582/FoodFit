<div class="container">
    <div class="clearfix">
        <h1 class="text-2xl text-button-color ml-10 md:ml-32 mx-auto pt-10 md:text-5xl"><%= t '.title' %></h1>
        <%= link_to "管理者ページへ", admin_login_path %>

        <div class="flex justify-center form-gorup py-5">
        
            <%= form_with url: login_path, local: true do |f| %>
                <div class="text-text-color md:text-2xl">
                    <div class = "form-group py-5">
                        <%= f.label :email, User.human_attribute_name(:email), class: "text-font-color text-1xl md:text-3xl" %>
                        <%= f.email_field :email, class: "form-control mb-3 py-3 px-10 mt-3 rounded-full  text-base md:text-2xl"  %>
                    </div>
                    <div class="form-group py-5">
                        <%= f.label :password, User.human_attribute_name(:password), class: "text-font-color text-1xl md:text-3xl" %>
                        <%= f.password_field :password, class: "form-control mb-3 mb-3 py-3 px-10 mt-3 rounded-full  text-base md:text-2xl" %>
                    </div>
                    <div class="form-group py-5 text-center">
                        <%= f.submit (t 'defaults.login'), class: 'btn btn-primary bg-button-color hover:bg-hover-color text-button-font border-none rounded-full py-5 px-10' %>
                    </div>
                </div>
            <% end %>
        </div>

        <div class='text-center'>
            <div class="pb-5">
                <%= link_to t('.password_forgot'), new_password_reset_path, class: "text-base md:text-2xl" %>
            </div>
            <div>
                <%= link_to t('.to_register_page'), new_user_path, class: "text-base md:text-2xl" %>
            </div>
        </div>
    </div>
</div>