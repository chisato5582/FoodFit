
<div class="container">
    <div class="pt-10 text-question-title rounded-sm mx-auto w-1/3">
        <div class="text-1xl md:text-3xl py-5 bg-button-color text-center opacity-80 rounded-full">
            <% if @result_value == "success" %>
                正解！
            <% else @result_value == "failure" %>
                不正解
            <% end %>
        </div>
    </div>
    <div>
        <%= render partial: 'shared/explanation', locals: { question: @question, result: @result } %>
    </div>
</div>