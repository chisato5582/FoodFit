<div class="container text-center mx-auto">
    <h1 class="text-2xl text-black-200 pt-10"><%= t '.title' %></h1>
    <div class="form-gorup py-5 flex justify-center">
        <%= form_with url: admin_login_path, local: true do |f| %>
            <div class="text-black-200 text-2xl">
                <div class = "form-group py-5">
                    <%= f.label :email, User.human_attribute_name(:email), class: "text-black-200 text-3xl" %>
                    <%= f.email_field :email, class: "form-control text-2xl rounded-full"  %>
                </div>
                <div class="form-group py-5">
                    <%= f.label :password, User.human_attribute_name(:password), class: "text-black-200 text-3xl" %>
                    <%= f.password_field :password, class: "form-control text-2xl rounded-full" %>
                </div>
                <div class="form-group py-5 text-center">
                    <%= f.submit (t 'defaults.login'), class: 'btn btn-primary rounded-full text-2xl py-5 px-10' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
