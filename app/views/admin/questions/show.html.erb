<div class="container">
    <h1 class="text-3xl pt-10 ml-10"><%= t '.title' %></h1>
    <div class="container ml-10 mt-10">
        <div>
            <h2 class="text-2xl text-button-color">問題内容</h2>
            <%= @question.content %>
        </div>
        <div class="mt-5">
            <h2 class="text-2xl text-button-color">解答理由</h2>
            <%= @question.reason %>
        </div>

        <%= button_to '削除', admin_question_path(@question), class: 'btn btn-danger mx-1 my-5', method: :delete, data: { confirm: '削除します' } %>
    </div>
</div>