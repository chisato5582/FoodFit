<div class="container">
    <h1 class="text-3xl pt-10 ml-10"><%= t '.title' %></h1>
    <div class="container ml-10 mt-10">
        <div class="mt-5">
            <h2 class="text-2xl text-button-color">問題種類</h2>
            <%= @question.type %>
        </div>
        <div class="mt-5">
            <h2 class="text-2xl text-button-color">問題内容</h2>
            <%= @question.content %>
        </div>
        <div class="mt-5">
            <h2 class="text-2xl text-button-color">解答理由</h2>
            <%= @question.reason %>
        </div>
        <div class="mt-5">
            <h2 class="text-2xl text-button-color">ヒント</h2>
            <%= @question.hint %>
        </div>
        <div class="mt-5">
            <h2 class="text-2xl text-button-color">選択肢</h2>
            <% @question.choices.each do |choice| %> 
                <%= choice.choice %> - <%= choice.correct ? "正解" : "不正解" %><br>
            <% end %>
        </div>
        <div class="flex">
            <%= button_to '削除', admin_question_path(@question), class: 'btn btn-danger mx-1 my-5', method: :delete, data: { confirm: '削除します' } %>
            <%= link_to '一覧', admin_questions_path, class: 'btn btnprimary mx-1 my-5' %>
            <%= link_to '作成', new_admin_question_path, class: 'btn btnprimary mx-1 my-5' %>
            <%= link_to '編集', edit_admin_question_path, class: 'btn btnprimary mx-1 my-5' %>
        </div>
    </div>
</div>