<div class="container">
    <h1 class="text-3xl pt-10 ml-10"><%= t '.title' %></h1>
    <div class="ml-10 mt-5 bg-button-color w-36 text-center">
        <%= link_to t('.questions'), admin_questions_path %>
    </div>
    <div class="flex justify-center">
        <%= form_with model: @question, url: admin_questions_path, local: true do |f| %>
            <div class = 'form-group py-2'>
                <%= f.label :content, class: "text-font-color text-3xl" %>
                <%= f.text_area :content,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
            </div>
            <div class = 'form-group py-2'>
                <%= f.label :reason, class: "text-font-color text-3xl" %>
                <%= f.text_area :reason,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
            </div>

            <div class="grid grid-cols-1 divide-black-200 divide-y-4">

                    <div>
                        <%= f.label :choice1, class: "text-font-color text-3xl" %>
                        <%= f.text_field :choice1,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                        <div class='form-group py-2'>
                            <%= f.label :correct1, class: "text-font-color text-3xl" do %>
                                <%= @edit_choice1.choice %>
                            <% end %>
                        </div>
                    </div>
                    <div>
                        <%= f.label :choice2, class: "text-font-color text-3xl" %>
                        <%= f.text_field :choice2,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                        <div class='form-group py-2'>
                            <%= f.label :correct2, class: "text-font-color text-3xl" %>
                            <%= f.label :correct2, class: "text-font-color text-3xl" do %>
                                <%= @edit_choice2.choice %>
                            <% end %>
                        </div>
                    </div>
                    <div>
                        <%= f.label :choice3, class: "text-font-color text-3xl" %>
                        <%= f.text_field :choice3,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                        <div class='form-group py-2'>
                            <%= f.label :correct3, class: "text-font-color text-3xl" %>
                            <%= f.label :correct3, class: "text-font-color text-3xl" do %>
                                <%= @edit_choice3.choice %>
                            <% end %>
                        </div>
                    </div>         
                    <div>
                        <%= f.label :choice4, class: "text-font-color text-3xl" %>
                        <%= f.text_field :choice4,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                        <div class='form-group py-2'>
                            <%= f.label :correct4, class: "text-font-color text-3xl" %>
                            <%= f.label :correct4, class: "text-font-color text-3xl" do %>
                                <%= @edit_choice4.choice %>
                            <% end %>
                        </div>
                    </div>


            </div>

            <div class="form-group py-5 text-center">
                <%= f.submit (t'defaults.register'), class: 'btn btn-primary bg-button-color hover:bg-hover-color border-none' %>
            </div>
        <% end %>
    </div>
</div>