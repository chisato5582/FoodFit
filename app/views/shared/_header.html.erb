<header>
    <div class="w-full flex mx-auto mt-26 text-center bg-header-color opacity-80 text-white h-16 py-5 md:h-28 md:py-10">
        <div class="mx-3 md:mx-6 my-link">
            <a href="<%= root_path %>" class="flex items-center text-white">
                <i class="fas fa-utensils text-2xl md:text-4xl mb-1"></i>
                <span class="ml-3 text-xl md:text-2xl font-bold font-HiraMinProN-W6">FoodFit</span>
            </a>
        </div>

        <div class="ml-auto mr-10 flex">
            <div class="ml-auto mx-3 md:mx-6 my-link md:text-xl text-mase">
                <%= link_to "問題を解く", question_tops_index_path %>
            </div>
            <nav>
                <button id="button" type="button" class="fixed z-10">
                    <i id="bars" class="fa-solid fa-bars fa-xl" style="color: #1f512b;"></i>
                    <i id="xmark" class="fa-solid fa-xmark fa-xl hidden" style="color: #582d09;"></i>
                </button>
                <ul id="menu" class="z-0 fixed top-0 left-0 w-full text-center bg-footer-color text-white font-bold translate-x-full transition ease-linear">
                    <div class="my-link">
                        <li class="p-3"><%= link_to "マイページ", profile_path, data: {"turbolinks" => false} %></li>
                    </div>
                    <div class="my-link">
                        <li class="p-3"><%= link_to "設定", edit_profile_path %></li>
                    </div>
                    <li class="p-3"><%= button_to "ログアウト", logout_path, method: :delete, class: 'button' %></li>
                </ul>
            </nav>
        </div>
    </div>
</header>
<main>
    <script>
        button.addEventListener('click', event => {
            bars.classList.toggle('hidden')
            xmark.classList.toggle('hidden')
            menu.classList.toggle('translate-x-full')
        });
    </script>
</main>