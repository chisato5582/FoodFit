<div class="container">
    <div class="clearfix">
        <h1 class="mx-auto text-2xl md:text-4xl text-button-color ml-10 md:ml-32 pt-10"><%= t '.title' %></h1>
        <div class="flex justify-center">
            <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>

                <div class="form-group text-mase md:text-3xl mt-5">
                    <%= f.label :email %> : 
                    <%= @user.email %>
                </div>
                <div class ='form-group py-5'>
                    <%= f.label :password, class: "text-font-color text-1xl md:text-3xl" %>
                    <%= f.password_field :password, class: "form-control mb-3 py-3 px-10 mt-3 text-base md:text-2xl rounded-full" %>
                </div>
                <div class="form-group py-5">
                    <%= f.label :password_confirmation, class: "text-font-color text-1xl md:text-3xl" %>
                    <%= f.password_field :password_confirmation, class: "form-control mb-3 mb-3 py-3 px-10 mt-3 text-base md:text-2xl rounded-full" %>
                </div>
                <div class="form-group py-5 text-center">
                    <%= f.submit (t'defaults.update'), class: 'btn btn-primary bg-button-color hover:bg-hover-color text-button-font border-none rounded-full py-5 px-10' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
